{
    "title": "Report",
    "type": "object",
    "properties": {
        "title": {
            "title": "Title",
            "default": "",
            "type": "string"
        },
        "identity": {
            "title": "Identity",
            "default": "",
            "type": "string"
        },
        "profile_name": {
            "title": "Profile Name",
            "default": "",
            "type": "string"
        },
        "platform": {
            "title": "Platform",
            "default": "",
            "type": "string"
        },
        "target": {
            "title": "Target",
            "default": "",
            "type": "string"
        },
        "cpe_platforms": {
            "title": "CPE Platforms",
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "[cC][pP][eE]:/[AHOaho]?(:[A-Za-z0-9\\._\\-~%]*){0,6}"
            }
        },
        "scanner": {
            "title": "Scanner",
            "default": "",
            "type": "string"
        },
        "scanner_version": {
            "title": "Scanner Version",
            "default": "",
            "type": "string"
        },
        "benchmark_url": {
            "title": "Benchmark URL",
            "default": "",
            "type": "string"
        },
        "benchmark_id": {
            "title": "Benchmark ID",
            "pattern": "xccdf_[^_]+_benchmark_.+",
            "type": "string"
        },
        "benchmark_version": {
            "title": "Benchmark Version",
            "default": "",
            "type": "string"
        },
        "start_time": {
            "title": "Start Time",
            "default": "",
            "type": "string"
        },
        "end_time": {
            "title": "End Time",
            "default": "",
            "type": "string"
        },
        "test_system": {
            "title": "Test System",
            "default": "",
            "type": "string"
        },
        "score": {
            "title": "Score",
            "default": 0.0,
            "type": "number"
        },
        "score_max": {
            "title": "Score Max",
            "default": 0.0,
            "type": "number"
        },
        "rules": {
            "title": "Rules",
            "oneOf": [
                {
                    "type": "object",
                    "patternProperties": {
                        "xccdf_[^_]+_rule_.+": {
                            "$ref": "#/definitions/Rule"
                        }
                    }
                },
                {
                    "type": "null"
                }
            ]
        },
        "groups": {
            "title": "Groups",
            "type": "object",
            "patternProperties": {
                "xccdf_[^_]+_group_.+": {
                    "$ref": "#/definitions/Group"
                }
            }
        }
    },
    "definitions": {
        "Identifier": {
            "title": "Identifier",
            "type": "object",
            "properties": {
                "system": {
                    "title": "System",
