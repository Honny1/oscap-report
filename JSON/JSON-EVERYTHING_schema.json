                }
            }
        },
        "OvalObject": {
            "title": "OvalObject",
            "type": "object",
            "properties": {
                "object_id": {
                    "title": "Object ID",
                    "pattern": "oval:[A-Za-z0-9_\\-\\.]+:obj:[1-9][0-9]*",
                    "type": "string"
                },
                "flag": {
                    "title": "Flag",
                    "default": "",
                    "type": "string"
                },
                "object_type": {
                    "title": "Object Type",
                    "default": "",
                    "type": "string"
                },
                "object_data": {
                    "title": "Object Data",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "OvalTest": {
            "title": "OvalTest",
            "type": "object",
            "properties": {
                "test_id": {
                    "title": "Test ID",
                    "pattern": "oval:[A-Za-z0-9_\\-\\.]+:tst:[1-9][0-9]*",
                    "type": "string"
                },
                "test_type": {
                    "title": "Test Type",
                    "default": "",
                    "type": "string"
                },
                "comment": {
                    "title": "Comment",
                    "default": "",
                    "type": "string"
                },
                "oval_object": {
                    "$ref": "#/definitions/OvalObject"
                }
            }
        },
        "OvalNode": {
            "title": "OvalNode",
            "type": "object",
            "properties": {
                "node_id": {
                    "title": "Node ID",
                    "oneOf": [
                        {
                            "type": "string",
                            "pattern": "oval:[A-Za-z0-9_\\-\\.]+:def:[1-9][0-9]*"
                        },
                        {
                            "type": "string",
                            "pattern": "oval:[A-Za-z0-9_\\-\\.]+:tst:[1-9][0-9]*"
                        },
                        {
                            "type": "string",
                            "pattern": "no-id-criteria-*"
                        },
                        {
                            "type": "string",
                            "pattern": "[Pp]latforms*"
                        }
                    ]
                },
                "node_type": {
                    "title": "Node Type",
                    "type": "string"
                },
                "value": {
                    "title": "Value",
                    "type": "string"
                },
                "negation": {
                    "title": "Negation",
                    "default": false,
                    "type": "boolean"
                },
                "comment": {
                    "title": "Comment",
                    "default": "",
                    "type": "string"
                },
                "tag": {
                    "title": "Tag",
                    "default": "",
                    "type": "string"
                },
                "children": {
                    "title": "Children",
                    "oneOf": [
                        {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/OvalNode"
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "test_info": {
                    "title": "test_info",
                    "oneOf": [
                        {
                            "$ref": "#/definitions/OvalTest"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        },
